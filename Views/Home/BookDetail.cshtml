@model DSCC_MVC.Models.Book
@{
    ViewData["Title"] = "Book Detail";
}

<div class="container mt-4">
    <h2 class="text-center">Book Details</h2>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
            <h6 class="card-subtitle mb-2 text-muted">@Model.Author</h6>
            <p class="card-text">@Model.Description</p>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item"><strong>Publisher:</strong> @Model.Publisher</li>
            <li class="list-group-item"><strong>Published Year:</strong> @Model.PublishedYear</li>
            <li class="list-group-item"><strong>ISBN:</strong> @Model.ISBN</li>
        </ul>
        <div class="card-body">
            <a asp-action="UpdateBook" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
